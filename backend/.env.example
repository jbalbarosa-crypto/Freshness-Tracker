# Backend Configuration Template
# Copy this to .env and update with your values

# Database Configuration
# Examples:
#   SQLite: sqlite:///./freshness.db
#   PostgreSQL: postgresql://user:password@localhost/dbname
#   MySQL: mysql+pymysql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./freshness.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# CORS Configuration
# Use * for all origins (development), or comma-separated list for production
# For LAN access, include your LAN IP: http://localhost:3000,http://192.168.1.100:3000
# Replace 192.168.1.100 with your actual LAN IP address
CORS_ORIGINS=*

# API Configuration
API_TITLE=Freshness Tracker API
API_VERSION=1.0.0
